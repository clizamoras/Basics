

name=input('Enter your name')
rollno=input('Enter your rollno')
phy=int(input('Enter your marks in physics'))
chem=int(input('Enter your marks is chemistry'))
maths=int(input('Enter your marks in mathematics'))
print('Grade Card')
print(name)
print(rollno)
print('.................................')
print('Marks in Physics,Chemistry and Mathematics out of 100')
print('Marks in Physics=',phy)
print('Marks in Chemistry=',chem)
print('Marks in Mathematics=',maths)
total=int(phy+chem+maths)
print('Total=',total)
per=float(total/3)
print('Percentage',per)

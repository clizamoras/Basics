def first_three_chars(input_string):
    # Check if the length of the string is less than 3
    if len(input_string) < 3:
        return input_string
    else:
        return input_string[:3]  # Return the first 3 characters

# Test the function
print(first_three_chars("Hello"))  # Output: Hel
print(first_three_chars("Hi"))     # Output: Hi
print(first_three_chars("A"))      # Output: A
